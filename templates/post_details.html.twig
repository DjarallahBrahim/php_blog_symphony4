{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .card{
            margin-top: 10%;
            width: 70%;
            margin-left: 15%;
            margin-bottom: 5%;
        }

    </style>
{% endblock %}


{% block body %}

    <div class="col-lg-8 card">

        <!-- Title -->
        <h1 class="mt-4">{{ post.title }}</h1>

        <!-- Author -->
        <p class="lead">
            by
            <a href="#">{{ post.user.username }}</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on {{ post.createdAt|date('M d ,Y') }}</p>

        <hr>

        <!-- Post Content -->
        <p class="lead">{{ post.description }}</p>

        <p>{{ post.body }}</p>

    </div>

{% endblock %}